.login-box, .signup-box
	background-color white
	border 1px solid #edeeee
	border-radius 3px
	padding 10px 0
	text-align center

.title
	// font-family 'Oleo Script', cursive
	font-size 2rem
	color color 1 !important

.signup-form 
	width 65%
	margin 0 auto
	& h2 
		color #a5a7aa
		font-size 12px
	& .btn.btn-fb
		background-color #4090db
		font-size .8em
	& .btn.btn-fbhover 
		background-color #2d6599
	& .btn.btn-signup 
		background-color color 1



