.Content
  width 100%
  position relative
  flex 1 1 auto
  display flex
  .Filter
    width 300px
    height 100%
    display inline-block
    position absolute
    z-index 0
    &__box
      display flex
      height 100%
      flex-direction column
      &--title
        height 55px
        line-height 55px
        border-bottom 1px solid #d4d4d4
        h3
          font-size 1.2rem
          font-weight bold
          text-align center
          line-height 55px
          margin 0
      &--selects
        overflow-y auto
        padding 1rem 0
        height 100%
        .input-field
          width 85%
          margin-left auto
          margin-right auto
  .TableList
    width 100%
    padding-left 300px
    box-sizing border-box
    &__box
      flex 1 1 auto
      height 100%
      display flex
      flex-direction column
      &--table, &--pagination
        display flex
        flex 1 auto
      &--table
        overflow-y auto
      &--pagination
        margin 0 auto
        height 70px
        .Pagination
          .PaginationContent
            margin  10px
            .selectPage
              margin 0 5px              