doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, minimum-scale=1, maximum-scale=1')
		title CaballeriaDB
		link(rel="stylesheet", href="./css/normalize.css")
