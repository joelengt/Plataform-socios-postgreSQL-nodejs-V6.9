			p empresa: #{user.empresa_admin}
			
		h2 Bienvenido al dashboard de oficina

	section
		a(href="/dashboard/ordenes_trabajo") Usuarios Socios 

	section
		a(href="/dashboard/usuarios") Usuarios Administrativos

	section
		div
			a(href="/dashboard/perfil") Ver Mi perfil
		div
			a(href="/logout") Salir
